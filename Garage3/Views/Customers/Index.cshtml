@model IEnumerable<Garage3.Models.Entities.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PersonalNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PersonalNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    <a asp-action="Index" asp-controller="VehiclesForCustomer" asp-route-id=@item.PersonalNumber>List Vehicle</a>
                    <a asp-action="Edit" asp-route-id="@item.PersonalNumber">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PersonalNumber">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PersonalNumber">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
