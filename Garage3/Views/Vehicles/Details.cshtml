@model Garage3.Models.ViewModels.ShowVehicleDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Vehicle</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Make)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Make)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumberOfWheels)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumberOfWheels)
        </dd>
        <dt class = "col-sm-2">
            @if (Model.timeSpentParkedInGarage != null)
            {
                {
                   
                    <p>@Html.DisplayNameFor(model => model.timeSpentParkedInGarage)</p>
                }

            }
            else
            {
                {
                    <p> Status</p>
                }
            }
         
        </dt>
        <dd class = "col-sm-10">
            @if (Model.timeSpentParkedInGarage != null)
            {
                {
                    <p>@Model.timeSpentParkedInGarage</p>
                }
              
            }
            else
            {
                {
                    <p> Not Parked</p>
                }
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.historicalArrivalDepartureTimes)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var item in Model.historicalArrivalDepartureTimes)
                {
                    {
                        <li>@item.ArrivalTime  -  @item.DepartureTime</li>
             
                    }

                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.RegistrationNumber">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
